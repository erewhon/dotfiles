[[ -s "/usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh" ]] && \
    source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh


#
# Level-up our pager, if possible
#
if command -v bat &> /dev/null; then
    export BAT_THEME=Dracula
    export MANPAGER="sh -c 'col -bx | bat -l man -p'"
    alias less=bat
    alias gitd='git diff --name-only --diff-filter=d | xargs bat --diff --show-all'
    tailf() { tail -f "$@" | bat --paging=never -l log }
elif [[ -f /usr/bin/batcat ]]; then
    export BAT_THEME=Dracula
    export MANPAGER="sh -c 'col -bx | batcat -l man -p'"
    alias less=batcat
    alias gitd='git diff --name-only --diff-filter=d | xargs batcat --diff --show-all'
    tailf() { tail -f "$@" | batcat --paging=never -l log }
else
    export PAGER=less
    alias gitd='git diff'
    alias tailf='tail -f'
fi

#
# Level-up ls if possible
#
if command -v exa 1>/dev/null 2>&1; then
    unalias l
    unalias ll
    unalias ls

    export EXA_GRID_ROWS=30

    function ls() {
        exa --icons --all --group-directories-first --grid "$@"
    }

    function ll() {
        exa -abghHl --time-style=long-iso --group-directories-first            --git --grid --color=always "$@"
    }

    function lll() {
        exa -abghHl --time-style=long-iso --group-directories-first --extended --git --grid --color=always "$@" | bat --style=plain
    }

    alias tree='exa -abghHl --time-style=long-iso --tree --level=3 --color=always'

    alias l=ll
fi

if command -v duf 1>/dev/null 2>&1; then
   alias df=duf
fi

# zoxide = directory jumping utility
if command -v zoxide 1>/dev/null 2>&1; then
    eval "$(zoxide init zsh)"
fi

# stern = kubernetes log viewer
if command -v stern 1>/dev/null 2>&1; then
    source <(stern --completion=zsh)
fi

